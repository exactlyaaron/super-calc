doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Super Calculator
    link(rel='stylesheet', href='css/app.css')
  body
    #wrapper
      h1#title Super Calculator

      #container

        table
          tbody
            tr
              td#display(colspan=5) 0
            tr
              td.number.button 7
              td.number.button 8
              td.number.button 9
              td.operator.button(data-op='add') +
              td.operator.button(data-op='sum') &#x03A3
            tr
              td.number.button 4
              td.number.button 5
              td.number.button 6
              td.operator.button(data-op='sub') -
              td.operator.button(data-op='exp') x&#8319;
            tr
              td.number.button 1
              td.number.button 2
              td.number.button 3
              td.operator.button(data-op='mult') *
              td.operator.button(data-op='root') &#x221a;
            tr
              td.number.button 0
              td.decimal.button .
              td.button#convert &#xB1;
              td.operator.button(data-op='div') &#xf7;
              td.operator.button(data-op='fact') !
            tr
              td.clear.button C
              td.clear.button X
              td.push.clear.button P
              td.empty
              td.empty


        #box
          #instructions Click "P" to move operators in the waiting area. Once two operators are chosen, select how you want to math them.

          #queue




    script(src='js/vendor/jquery-2.1.0.js')
    script(src='js/source/main.js')
